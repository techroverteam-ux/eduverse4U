    "frontend:build": "cd frontend && npm run build"
  },
  "keywords": [
    "school",
    "erp",
    "saas",
    "education",
    "india"
  ],
  "author": "EduVerse Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "pg": "^8.16.3"
  }
}
