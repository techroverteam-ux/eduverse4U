{
  "name": "eduverse-erp",
  "version": "1.0.0",
  "description": "India's Advanced School Management SaaS",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run start:dev",
